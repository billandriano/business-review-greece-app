<RelativeLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	xmlns:tools="http://schemas.android.com/tools"
	android:layout_width="match_parent"
	android:layout_height="match_parent">
	<LinearLayout
		android:layout_width="match_parent"
		android:layout_height="match_parent"
		android:orientation="vertical"
		app:layout_behavior="@string/appbar_scrolling_view_behavior">

		<LinearLayout
			android:id="@+id/linear1"
			android:layout_width="match_parent"
			android:layout_height="match_parent"
			android:padding="8dp"
			android:gravity="center_horizontal"
			android:orientation="vertical"
			android:background="@color/colorBackground">
			<FrameLayout
				android:id="@+id/layoutDate"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:padding="5dp">
				<ImageView
					android:id="@+id/all_author"
					android:src="@drawable/author_ic"
					android:layout_width="30dp"
					android:layout_height="30dp"
					android:layout_marginLeft="10dp"
					android:layout_marginRight="110dp"/>
				<ImageView
					android:id="@+id/all_search"
					android:src="@drawable/ic_search_black_24dp"
					android:layout_width="30dp"
					android:layout_height="30dp"
					android:layout_marginLeft="10dp"
					android:layout_marginRight="110dp"/>


				<TextView
					android:id="@+id/titleforall"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:layout_marginLeft="60dp"
					android:layout_marginRight="20dp"
					android:layout_marginTop="5dp"
					android:textStyle="bold"
					android:layout_gravity="center_vertical"
					android:text="01 Ιανουαρίου 1990"
					android:textColor="@color/colorTextTitle" />


			</FrameLayout>
			<androidx.swiperefreshlayout.widget.SwipeRefreshLayout
				android:id="@+id/refresh"
				android:layout_width="match_parent"
				android:layout_height="match_parent"
				android:background="@color/colorBackground">

				<androidx.recyclerview.widget.RecyclerView
					android:id="@+id/list"
					android:layout_width="match_parent"
					android:layout_height="match_parent" />

			<ImageView
				android:id="@+id/imageview1"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:src="@drawable/default_image"
				android:scaleType="center"/>
			<TextView
				android:id="@+id/textview1"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:padding="8dp"
				android:text="Δεν βρέθηκε αυτό που αναζητήσατε"
				android:textSize="16sp"
				android:textStyle="bold"
				android:textColor="@color/colorTextTitle"/>
			</androidx.swiperefreshlayout.widget.SwipeRefreshLayout>
		</LinearLayout>
	</LinearLayout>
	<com.google.android.material.bottomnavigation.BottomNavigationView
		android:id="@+id/bottom_navigation"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:layout_marginLeft="8dp"
		android:layout_marginRight="8dp"
		android:layout_marginBottom="16dp"
		android:layout_alignParentBottom="true"
		android:background="@drawable/bottom_navigation_backround"
		android:elevation="8dp"
		app:itemIconSize="28dp"
		app:itemIconTint="@drawable/bottom_navigation_color_selector"
		app:labelVisibilityMode="unlabeled"
		app:layout_constraintBottom_toBottomOf="parent"
		app:layout_constraintLeft_toLeftOf="parent"
		app:layout_constraintRight_toRightOf="parent"
		app:menu="@menu/bottom_navigation" />
</RelativeLayout>
